<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body>
  <%- include('partials/_header') %>
  <main class="mx-5">
    <h3 class="mb-3">My URLs</h3>
    <table class="table table-bordered table-hover">
      <caption>Shortened URLs and their corresponding long URLs.</caption>
      <colgroup>
      <thead class="thead-dark">
        <tr style="text-align:center">
          <th class="col-3" scope="col">Short URL</th>
          <th class="col-5" scope="col">Long URL</th>
          <th class="col-2" scope="col">Edit</th>
          <th class="col-2" scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% const regex = new RegExp('(https?|):\/\/(w{3}?.|)') %>
        <% for(const url of urls) { %>
          <% const shortURL = url[0] %> 
          <% const longURL = url[1]['longURL'] %>
          <% const res = regex.exec(longURL) %>
          <tr>
            <td><span style="color:darkgray">localhost:8080/u/</span><strong><%= shortURL %></strong></td>
            <% if (res === null) { %>
              <td><a class="text-center" href="<%= longURL %>"><%= longURL %></a></td>
            <% } else { %>
              <td><a class="text-center" href="<%= longURL %>"><%= longURL.substring(res[0].length) %></a></td>
            <% } %>
            <td class="align-middle"><a href="/urls/<%= shortURL %>">Edit</a></td>
            <td class="align-middle">
              <form method="POST" action="/urls/<%= url %>/delete">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>