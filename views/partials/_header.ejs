<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- TODO - add conditional to hide login form and show "Logged in as USER" if user is logged in -->
      <% if (typeof(username) !== 'undefined') { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group">
            <label class="text-light mr-2" for="username">Logged in as: </label>
            <p class="text-light mb-0" name="username"><strong><%= username %></strong></p>
            <button type="submit" class="btn btn-outline-light ml-4 btn-sm">Logout</button>
          </div>
        </form>
      <% } else { %>  
        <form class="form-inline" action="/login" method="POST">
          <div class="form-group">
              <label class="text-light mr-2" for="username">Login: </label>
              <input class="form-control form-control-sm" type="text" placeholder="Enter your username" name="username">
              <button type="submit" class="btn btn-outline-light ml-2 btn-sm">Submit</button>
          </div>
        </form>
      <% } %>
    </div>
    
  </nav>
</header>